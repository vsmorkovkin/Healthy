<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Healthy"/>

    <style name="Healthy.Text"/>

    <style name="Healthy.Text.Onboarding"/>

    <style name="Healthy.Text.Onboarding.Title">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#232323</item>
    </style>

    <style name="Healthy.Text.Onboarding.Description">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#8E8E8E</item>
    </style>


    <style name="Healthy.Text.Button">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="Healthy.Widget"/>

    <style name="Healthy.Widget.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAppearance">@style/Healthy.Text.Button</item>
    </style>

    <style name="Healthy.Widget.Button.Primary">
        <item name="android:layout_height">@dimen/primary_button_height</item>
    </style>

    <style name="Healthy.Widget.Button.Primary.Forward">
        <item name="icon">@drawable/ic_forward_arrow</item>
        <item name="iconSize">@dimen/primary_button_icon_size</item>
        <item name="iconGravity">textEnd</item>
    </style>

    <style name="Healthy.Widget.Button.Secondary">
        <item name="android:layout_height">@dimen/secondary_button_height</item>
    </style>

</resources>