<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.activity_by_day.ActivityByDayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <Button
            android:id="@+id/button_select_date"
            style="@style/Healthy.Widget.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_select_date" />

        <TextView
            android:id="@+id/text_view_current_date_activity_by_day"
            style="@style/Healthy.Text.H5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@string/current_date_hint" />

        <include
            android:id="@+id/card_nutrition_activity_by_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            layout="@layout/card_nutrition" />

        <include
            android:id="@+id/container_cards_activity_by_day"
            layout="@layout/container_cards_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp" />

    </LinearLayout>

</ScrollView>
